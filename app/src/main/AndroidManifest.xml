<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.alessi.chunk.pomodoro.timer.android">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"

        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="dev.alessi.chunk.pomodoro.timer.android.util.PocActivity"></activity>

        <service
            android:name="dev.alessi.chunk.pomodoro.timer.android.util.PocService"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name=".platform.ChunkTimerService"
            android:exported="false" />

        <receiver
            android:name=".TimeUpAlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity android:name="dev.alessi.chunk.pomodoro.timer.android.ui.TimerActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>