    <style name="LogicalDataTableMiddle">
        <item name="android:padding">8dp</item>

        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="LogicalDataTableBottom">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/drawable_bottom_corner</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>




    <!-- Dialogs -->


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
