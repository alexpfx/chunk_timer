<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/text_color_primary_on_dark</item>
        <item name="android:textColor">@color/text_color_primary</item>

    </style>

    <!-- Text Views -->




    <style name="LogicalDataTableTop" >
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/drawable_top_corner</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="LogicalDataTableMiddle" >
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/color_foreground_light</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="LogicalDataTableBottom" >
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/drawable_bottom_corner</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>




    <!-- Dialogs -->

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>


    </style>


    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_color_primary_on_dark</item>
        <item name="backgroundTint">@color/color_button_primary</item>

    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="backgroundTint">@color/color_button_secondary</item>
    </style>


    <!--Buttons -->
    <style name="TimerActionButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/TimerButtonShapeAppearance</item>
        <item name="strokeColor">@color/color_action_dividers</item>
        <item name="android:textSize">12sp</item>
        <item name="iconSize">28dp</item>
    </style>

    <style name="TextInputLayoutPreferences" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="colorControlActivated">@color/white</item>

    </style>

    <style name="ActionButtons" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/color_action_foreground</item>
    </style>


    <style name="TimerBreakButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/TimerButtonShapeAppearance</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="strokeColor">@color/color_action_dividers</item>
        <item name="android:textSize">11sp</item>
        <item name="iconSize">23dp</item>
    </style>


    <style name="FrameIconPizzaBackground">
        <!--<item name="android:background">@color/colorPrimary</item>-->

        <item name="backgroundUnchecked">@drawable/background_unselected_button</item>
        <item name="backgroundChecked">@drawable/background_selected_button</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="ViewIconPizzaBackground">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">58dp</item>


        <item name="android:layout_gravity">top|center</item>


    </style>

    <style name="TextIconPizza">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:layout_gravity">bottom|center</item>


    </style>


    <style name="FrameLayoutBackground">
        <item name="android:background">@drawable/drawable_task_name_background</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="TimerButtonShapeAppearance">

        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/corner_size_medium</item>

    </style>

    <style name="RecyclerViews">
        <item name="android:listDivider">@drawable/drawable_divider_horizontal</item>

    </style>


</resources>
