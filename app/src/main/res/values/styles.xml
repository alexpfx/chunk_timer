<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/color_on_light</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="colorSurface">#414141</item>

    </style>

    <!-- Text Views -->


    <style name="LogicalDataTableTop">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/drawable_top_corner</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="LogicalDataTableMiddle">
        <item name="android:padding">8dp</item>

        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>

    <style name="LogicalDataTableBottom">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/drawable_bottom_corner</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    </style>


    <!-- Dialogs -->

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>


    </style>


    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/color_on_light</item>


    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_color_secondary</item>

    </style>


    <!--Buttons -->


    <style name="TextInputLayoutPreferences" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="colorControlActivated">@color/white</item>

    </style>

    <style name="ActionButtons" parent="@style/Widget.AppCompat.ImageButton">
        <item name="iconTint">@color/action_color</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ActionButtonsSmall" parent="@style/Widget.AppCompat.ImageButton">

        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="TimerActionButton" parent="Widget.MaterialComponents.Button">

        <item name="backgroundTint">@color/colorAccent</item>


        <item name="shapeAppearance">@style/RoundedButtonShapeAppearance</item>
        <item name="android:textSize">13sp</item>
        <item name="iconSize">36dp</item>
        <item name="iconTint">@color/color_on_light</item>
        <item name="android:textColor">@color/color_on_light</item>
    </style>


    <style name="TimerBreakButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/RoundedButtonShapeAppearance</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="strokeColor">@color/stroke_color</item>
        <item name="strokeWidth">@dimen/stroke_width_small</item>
        <item name="iconTint">@color/action_color</item>

        <item name="android:textSize">11sp</item>
        <item name="iconSize">23dp</item>
    </style>



    <style name="ViewIconPizzaBackground">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">58dp</item>


        <item name="android:layout_gravity">top|center</item>


    </style>

    <!--android:gravity="center"
    android:padding="2dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:textStyle="bold"-->

    <style name="TextViewEstimationSummary">
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="TextIconPizza">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:layout_gravity">bottom|center</item>

    </style>


    <style name="TimerCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/RoundedButtonShapeAppearance</item>
        <item name="strokeWidth">@dimen/stroke_width_small</item>
        <item name="android:padding">8dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>

    </style>


    <style name="RoundedButtonShapeAppearance">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/corner_size_medium</item>

    </style>

    <style name="RecyclerViews">
        <item name="android:listDivider">@drawable/drawable_divider_horizontal</item>

    </style>

    <style name="ButtonClockView">

        <item name="borderWidth">@dimen/stroke_width_medium</item>
        <item name="circleRadius">3dp</item>
        <item name="hoursHandHeight">17dp</item>
        <item name="hoursHandWidth">3dp</item>
        <item name="minutesFontSize">10sp</item>
        <item name="minutesHandWidth">2.2dp</item>
        <item name="android:padding">1dp</item>
        <item name="minutesHandHeight">19dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_margin">1dp</item>
        <item name="clockActiveBackgroundColor" >@color/clock_active_background_color</item>
        <item name="clockBackgroundColor" >@color/clock_background_color</item>
        <item name="clockActiveBorderColor" >@color/clock_active_border_color</item>
        <item name="clockBorderColor" >@color/clock_border_color</item>
        <item name="clockActiveClockHandsColor" >@color/clock_active_clock_hands_color</item>
        <item name="clockClockHandsColor" >@color/clock_hands_color</item>

        <item name="clockMinutesFontColor">@color/clock_hands_color</item>
        <item name="clockActiveMinutesFontColor">@color/clock_active_clock_hands_color</item>


        <!--<item name="android:background">@drawable/background_selected_button</item>-->


    </style>




    <style name="ButtonClockView.PP" parent="ButtonClockView">
        <item name="clockBorderColor" >@color/clock_border_color_pp</item>

        <item name="clockClockHandsColor" >@color/clock_hands_color_pp</item>
        <item name="clockActiveClockHandsColor" >@color/clock_active_clock_hands_color</item>

        <item name="clockMinutesFontColor">@color/clock_hands_color_pp</item>
        <item name="clockActiveMinutesFontColor">@color/clock_active_clock_hands_color_pp</item>
    </style>

    <style name="ButtonClockView.P" parent="ButtonClockView">
        <item name="clockBorderColor" >@color/clock_border_color_p</item>
        <item name="clockClockHandsColor" >@color/clock_hands_color_p</item>
        <item name="clockMinutesFontColor">@color/clock_hands_color_p</item>
        <item name="clockActiveMinutesFontColor">@color/clock_active_clock_hands_color_p</item>
    </style>

    <style name="ButtonClockView.M" parent="ButtonClockView">
        <item name="clockBorderColor" >@color/clock_border_color_m</item>
        <item name="clockClockHandsColor" >@color/clock_hands_color_m</item>
        <item name="clockMinutesFontColor">@color/clock_hands_color_m</item>
        <item name="clockActiveMinutesFontColor">@color/clock_active_clock_hands_color_m</item>
    </style>

    <style name="ButtonClockView.G" parent="ButtonClockView">
        <item name="clockBorderColor" >@color/clock_border_color_g</item>
        <item name="clockClockHandsColor" >@color/clock_hands_color_g</item>
        <item name="clockMinutesFontColor">@color/clock_hands_color_g</item>
        <item name="clockActiveMinutesFontColor">@color/clock_active_clock_hands_color_g</item>
    </style>

    <style name="ButtonClockView.GG" parent="ButtonClockView">
        <item name="clockBorderColor" >@color/clock_border_color_gg</item>
        <item name="clockClockHandsColor" >@color/clock_hands_color_gg</item>
        <item name="clockMinutesFontColor">@color/clock_hands_color_gg</item>
        <item name="clockActiveMinutesFontColor">@color/clock_active_clock_hands_color_gg</item>
    </style>



</resources>

