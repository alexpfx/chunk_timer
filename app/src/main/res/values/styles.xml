    <style name="TimerActionButton" parent="Widget.MaterialComponents.Button">

        <item name="android:minWidth">190dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">55dp</item>

        <item name="iconPadding">8dp</item>

    </style>


    <style name="TimerBreakButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minWidth">190dp</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="iconPadding">8dp</item>


        <item name="android:textSize">12sp</item>
