    <!-- Buttons -->

    <style name="Widget.Timer.ImageButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <!--<item name="android:alpha">?alphaEmphasisMedium</item>-->
        <item name="android:tint">?attr/colorControlNormal</item>
    </style>



    <style name="Widget.Timer.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="drawableTint">?colorControlNormal</item>

    </style>
    
    <style name="Widget.Timer.TextViewSpotlight" parent="Widget.Timer.TextView">
        <item name="android:gravity">center_vertical</item>


    </style>

    <style name="Widget.Timer.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="android:paddingTop">@dimen/keyline_3</item>
        <item name="android:paddingRight">@dimen/keyline_4</item>
        <item name="android:paddingLeft">@dimen/keyline_4</item>


        <item name="iconPadding">@dimen/keyline_2</item>


        <item name="android:paddingBottom">@dimen/keyline_3</item>
    </style>

    <style name="Widget.Timer.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:textColor">?colorOnSurface</item>


    </style>


    <style name="Widget.Timer.TextButton" parent="Widget.MaterialComponents.Button.TextButton">



    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <!--<item name="android:background">@drawable/gradient_main_background</item>-->
    </style>


    <style name="Widget.Timer.MaterialButtonToggle" parent="@style/Widget.MaterialComponents.MaterialButtonToggleGroup">

    </style>

    <style name="Widget.Timer.TextInputStyle" parent="@style/Widget.Design.TextInputLayout">



    </style>

    <style name="Widget.Timer.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">?attr/shapeAppearanceMediumComponent</item>
        <item name="cardBackgroundColor">?colorBackground</item>
        <item name="cardElevation">0dp</item>

        <item name="strokeWidth">0.2dp</item>
        <item name="strokeColor">@color/color_primary</item>


    </style>


    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">


    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">


    </style>


    <!--Buttons -->


    <style name="TextInputLayoutPreferences" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!--<item name="boxBackgroundColor">@color/white</item>
        <item name="colorControlActivated">@color/white</item>-->


    </style>




    <!--android:gravity="center"
    android:padding="2dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:textStyle="bold"-->

    <style name="TextViewEstimationSummary">
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>



    <style name="divider">
        <item name="android:background">?colorPrimary</item>
        <item name="android:alpha">0.25</item>
        <item name="android:layout_height">0.2dp</item>
    </style>

    <style name="Widget.Timer.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">?colorSurface</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="ButtonClockView">
        <item name="android:padding">1dp</item>

        <item name="borderWidth">@dimen/stroke_width_medium</item>
        <item name="circleRadius">3dp</item>
        <item name="hoursHandHeight">17dp</item>
        <item name="hoursHandWidth">3dp</item>
        <item name="minutesFontSize">10sp</item>
        <item name="minutesHandWidth">2.2dp</item>
        <!--<item name="android:padding">0dp</item>-->
        <item name="minutesHandHeight">19dp</item>


        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_margin">1dp</item>

        <item name="clockActiveBorderColor">?colorPrimary</item>
        <item name="clockActiveClockHandsColor">?colorPrimary</item>
        <item name="clockActiveMinutesFontColor">?colorPrimary</item>
        <item name="clockActiveBackgroundColor">?colorSurface</item>

        <item name="clockBorderColor">?colorControlNormal</item>
        <item name="clockClockHandsColor">?colorControlNormal</item>
        <item name="clockMinutesFontColor">?colorControlNormal</item>
        <item name="clockBackgroundColor">?colorBackground</item>


        <!--<item name="android:background">@drawable/background_selected_button</item>-->


    </style>


    <style name="ButtonClockView.PP" parent="ButtonClockView">
        <item name="clockSizeName">@string/label_sizes_pp</item>


    </style>

    <style name="ButtonClockView.P" parent="ButtonClockView">
        <item name="clockSizeName">@string/label_sizes_p</item>

    </style>

    <style name="ButtonClockView.M" parent="ButtonClockView">
        <item name="clockSizeName">@string/label_sizes_m</item>

    </style>

    <style name="ButtonClockView.G" parent="ButtonClockView">
        <item name="clockSizeName">@string/label_sizes_g</item>

    </style>

    <style name="ButtonClockView.GG" parent="ButtonClockView">
        <item name="clockSizeName">@string/label_sizes_gg</item>

    </style>


