        <item name="minutesHandHeight">19dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_margin">1dp</item>

        <item name="clockActiveBorderColor">?colorPrimary</item>
        <item name="clockActiveClockHandsColor">?colorPrimary</item>
        <item name="clockActiveMinutesFontColor">?colorPrimary</item>
        <item name="clockActiveBackgroundColor">#cfd8dc</item>

        <item name="clockBorderColor">?colorControlNormal</item>
        <item name="clockClockHandsColor">?colorControlNormal</item>
        <item name="clockMinutesFontColor">?colorControlNormal</item>
