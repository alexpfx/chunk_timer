<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>


        <item name="android:textColor">@color/text_color_primary</item>

    </style>

    <!-- Dialogs -->

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>


    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#757575</item>

    </style>


    <!--Buttons -->
    <style name="TimerActionButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/TimerButtonShapeAppearance</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="iconSize">28dp</item>
    </style>

    <style name="TextInputLayoutPreferences" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="colorControlActivated">@color/white</item>


    </style>

    <style name="TimerSelectSizeButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:alpha">0.6</item>

        <item name="iconGravity">textStart</item>
        <item name="android:checkable">true</item>
        <item name="iconTint">@android:color/transparent</item>
        <item name="iconTintMode">add</item>
        <item name="iconSize">@dimen/select_size_icon_size</item>
        <item name="shapeAppearance">@style/TimerButtonShapeAppearance</item>
    </style>

    <style name="TimerSelectSizeButtonDialog">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:alpha">0.6</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">40dp</item>

    </style>


    <style name="TimerBreakButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/TimerButtonShapeAppearance</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textSize">11sp</item>
        <item name="iconSize">23dp</item>
    </style>


    <style name="TextViewTask" parent="@style/Widget.MaterialComponents.TextView">
        <item name="backgroundTint">@color/bg_color_light</item>

    </style>


    <style name="FrameLayoutBrackground">
        <item name="android:background">@drawable/drawable_task_name_background</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="TimerButtonShapeAppearance">

        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSize">8dp</item>

    </style>


</resources>
