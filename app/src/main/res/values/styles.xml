    <style name="TextViewEstimationSummary">
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


    <style name="RecyclerViews" parent="Widget.AppCompat.ListView">


    </style>

    <style name="divider">
        <item name="android:background">?colorControlNormal</item>
        <item name="android:alpha">0.18</item>
    </style>

    <style name="Widget.Timer.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">?colorSurface</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="ButtonClockView">

        <item name="borderWidth">@dimen/stroke_width_medium</item>
        <item name="circleRadius">3dp</item>
        <item name="hoursHandHeight">17dp</item>
        <item name="hoursHandWidth">3dp</item>
        <item name="minutesFontSize">10sp</item>
        <item name="minutesHandWidth">2.2dp</item>
