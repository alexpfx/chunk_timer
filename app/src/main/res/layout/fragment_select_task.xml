    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_inative"
    android:orientation="vertical"
    android:paddingLeft="@dimen/default_layout_margin"
    android:paddingRight="@dimen/default_layout_margin"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"

    tools:context=".ui.task.SelectTaskFragment">


    <include layout="@layout/layout_content_empty" />

    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/layout_content"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <!--<TextView
            android:background="@color/color_foreground_light"
            android:id="@+id/label_select_message"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:text="@string/message_select_task"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />-->


        <!-- TODO: Update blank fragment layout -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_select_task"

            style="@style/RecyclerViews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="-3dp"
            tools:itemCount="4"




            tools:listitem="@layout/item_select_task" />


    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"


        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"


        android:clickable="true"
        android:focusable="true"

        app:srcCompat="@drawable/ic_add_black_24dp" />

