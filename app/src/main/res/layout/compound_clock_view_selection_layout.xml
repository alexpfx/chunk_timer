<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:textAppearance="?textAppearanceOverline"
        android:paddingTop="@dimen/keyline_2"
        android:paddingBottom="@dimen/keyline_2"
        tools:text="Selecione o timer:" />

    <LinearLayout
        android:id="@+id/linear_layout_content_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_message"
        android:layout_alignStart="@id/txt_message"
        android:orientation="horizontal"

        tools:layout_height="64dp"
        tools:layout_width="match_parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        style="@style/Widget.Timer.ImageButton"
        android:id="@+id/btn_view_more"
        android:layout_width="48dp"

        android:layout_height="24dp"


        android:layout_below="@id/linear_layout_content_view"
        android:layout_alignEnd="@id/linear_layout_content_view"
        android:background="?selectableItemBackgroundBorderless"
        android:tint="?attr/colorControlNormal"
        app:srcCompat="@drawable/ic_more_horiz_black_24dp" />


</RelativeLayout>