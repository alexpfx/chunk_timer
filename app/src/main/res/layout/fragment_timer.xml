        <ImageButton
            android:id="@+id/btnClearTask"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:tint="@color/text_color_primary"
            app:layout_constraintBottom_toBottomOf="@+id/frm"
            app:layout_constraintStart_toEndOf="@+id/frm"
            app:layout_constraintTop_toTopOf="@+id/frm"
            app:srcCompat="@drawable/ic_clear_24dp" />

        <FrameLayout
            android:id="@+id/frm"
            style="@style/FrameLayoutBrackground"
            android:layout_width="0dp"

            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:focusable="true"

            android:focusableInTouchMode="true"


            android:foregroundGravity="center"
            app:layout_constraintEnd_toEndOf="@+id/layoutTimerSettings"
            app:layout_constraintStart_toStartOf="@+id/layoutTimerSettings"
            app:layout_constraintTop_toBottomOf="@+id/layoutTimerSettings">


            <TextView

                android:id="@+id/txtTask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:maxWidth="200dp"
                android:maxHeight="100dp"
                android:minWidth="180dp"
                android:minHeight="64dp"

                android:text="@string/message_hint_choose_task"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <!--<TextView
                android:id="@+id/txtTaskLabel"
                android:visibility="visible"
                style="@style/TextViewTask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="teste"
                android:textColor="@color/text_color_primary" />-->

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linear_layout_buttons_base"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="12dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            >

            <FrameLayout
                android:id="@+id/frBtnSizePP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_pizza_pp"

                android:padding="2dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:adjustViewBounds="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="12dp"
                    android:scaleType="centerCrop"
                    android:tag="@string/tag_size_index_0"
                    app:srcCompat="@drawable/pizza640grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="broto"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


            </FrameLayout>

            <FrameLayout
                android:id="@+id/frBtnSizeP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_pizza_p">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:tag="@string/tag_size_index_1"
                    app:srcCompat="@drawable/pizza640red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="pequena"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            </FrameLayout>


            <FrameLayout
                android:id="@+id/frBtnSizeM"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/color_pizza_m">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"


                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:tag="@string/tag_size_index_2"
                    app:srcCompat="@drawable/pizza640yellow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="média"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frBtnSizeG"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_pizza_g">

                <ImageButton

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:tag="@string/tag_size_index_3"
                    app:srcCompat="@drawable/pizza640blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="grande"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frBtnSizeGG"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/color_pizza_gg">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"

                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="2dp"
                    android:scaleType="centerCrop"

                    android:tag="@string/tag_size_index_4"
                    app:srcCompat="@drawable/pizza640green" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:text="família"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            </FrameLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>