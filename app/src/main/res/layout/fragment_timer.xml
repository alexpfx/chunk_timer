        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:max="100"

            android:progress="45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frBtnSizePP" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartTimer"
            style="@style/TimerActionButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="32dp"
            android:text="@string/button_label_start"
            app:icon="@drawable/ic_timer_black_24dp"
            app:iconPadding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelTimer"
            style="@style/TimerActionButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="32dp"

            android:text="@string/button_label_cancel"
            android:visibility="invisible"

            app:icon="@drawable/ic_cancel_black_24dp"


            app:iconPadding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <FrameLayout
            android:id="@+id/frTxtPercent"
            style="@style/FrameLayoutBrackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/frTxtMainTimer"
            app:layout_constraintTop_toBottomOf="@+id/frTxtMainTimer">

            <TextView
                android:id="@+id/txtPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="100 %" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frTxtMainTimer"
            style="@style/FrameLayoutBrackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"

            android:layout_marginBottom="32dp"

            app:layout_constraintBottom_toTopOf="@+id/btnStartBreak"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frm"
            tools:text="00:00:00">

            <TextView
                android:id="@+id/txtMainTimer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="00:00"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartBreak"
            style="@style/TimerBreakButton"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:text="@string/button_label_start_break"
            app:icon="@drawable/ic_local_cafe_black_24dp"
            app:iconPadding="2dp"
            app:layout_constraintBottom_toTopOf="@+id/btnStartTimer"
            app:layout_constraintEnd_toEndOf="@+id/btnStartTimer"
            app:layout_constraintStart_toStartOf="@+id/btnStartTimer" />


        <LinearLayout
            android:id="@+id/layoutTimerSettings"
            style="@style/FrameLayoutBrackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"

            app:layout_constraintEnd_toEndOf="@+id/frm"
            app:layout_constraintStart_toStartOf="@+id/frm"
            app:layout_constraintTop_toBottomOf="@+id/progressBar">

            <ImageButton
                android:id="@+id/btnIconSetTaskTimes"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:tint="@color/text_color_primary"
                app:srcCompat="@drawable/ic_timer_black_24dp" />

            <TextView
                android:id="@+id/txtTimerDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/init_timer_time"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"

                android:textColor="@color/text_color_primary"
                tools:text="00:35:45" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnIconSetBreak"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:tint="@color/text_color_primary"
                app:srcCompat="@drawable/ic_local_cafe_black_24dp" />

            <TextView
                android:id="@+id/txtBreakTimeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="@string/init_timer_time"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/text_color_primary"

                tools:text="10:00" />


        </LinearLayout>


        <ImageButton
            android:id="@+id/btnLoadTask"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"


            android:padding="8dp"
            android:tint="@color/text_color_primary"
            app:layout_constraintBottom_toBottomOf="@+id/frm"
            app:layout_constraintStart_toEndOf="@+id/frm"
            app:layout_constraintTop_toTopOf="@+id/frm"
            app:srcCompat="@drawable/ic_assignment_return_black_24dp" />


