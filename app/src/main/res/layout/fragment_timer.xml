        <View
            android:id="@+id/separator_view"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"

            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout_buttons_base" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartTimer"
            style="@style/TimerActionButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="32dp"
            android:text="@string/button_label_start"
            app:icon="@drawable/ic_timer_black_24dp"
            app:iconPadding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.button.MaterialButton

            android:id="@+id/btnCancelTimer"
            style="@style/TimerActionButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="32dp"

            android:text="@string/button_label_cancel"
            android:visibility="invisible"

            app:icon="@drawable/ic_cancel_black_24dp"


            app:iconPadding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/frTxtMainTimer"
            app:strokeWidth="@dimen/stroke_width_medium"
            style="@style/TimerCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:layout_marginBottom="16dp"
            android:minWidth="180dp"
            app:layout_constraintBottom_toTopOf="@+id/btnStartBreak"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="00:00:00">

            <TextView
                android:id="@+id/txtMainTimer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:layout_margin="4dp"
                android:text="00:00"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textStyle="bold" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartBreak"
            style="@style/TimerBreakButton"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:text="@string/button_label_start_break"
            app:icon="@drawable/ic_local_cafe_black_24dp"
            app:iconPadding="2dp"
            app:layout_constraintBottom_toTopOf="@+id/btnStartTimer"
            app:layout_constraintEnd_toEndOf="@+id/btnStartTimer"
            app:layout_constraintStart_toStartOf="@+id/btnStartTimer" />


        <ImageButton

            android:id="@+id/btnIconSetTaskTimes"
            style="@style/ActionButtons"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"

            android:contentDescription="@string/content_description_setup_timers_values"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@+id/txtTimerDisplay"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator_view"
            app:srcCompat="@drawable/ic_timer_black_24dp" />

        <TextView

            android:id="@+id/txtTimerDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/init_timer_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"

            app:layout_constraintBottom_toBottomOf="@id/btnIconSetTaskTimes"
            app:layout_constraintEnd_toStartOf="@+id/btnIconSetBreak"
            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toEndOf="@+id/btnIconSetTaskTimes"
            app:layout_constraintTop_toTopOf="@id/btnIconSetTaskTimes"
            tools:text="00:35:45" />

        <ImageButton
            android:id="@+id/btnIconSetBreak"
            style="@style/ActionButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"


            android:background="?attr/selectableItemBackgroundBorderless"

            android:contentDescription="@string/content_description_setup_break_values"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/btnIconSetTaskTimes"
            app:layout_constraintEnd_toStartOf="@+id/txtBreakTimeDisplay"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txtTimerDisplay"
            app:layout_constraintTop_toTopOf="@id/btnIconSetTaskTimes"
            app:srcCompat="@drawable/ic_local_cafe_black_24dp" />

        <TextView
            android:id="@+id/txtBreakTimeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/init_timer_time"

            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintBottom_toBottomOf="@id/btnIconSetTaskTimes"
            app:layout_constraintEnd_toStartOf="@+id/btnOpenSettings"
            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toEndOf="@+id/btnIconSetBreak"
            app:layout_constraintTop_toTopOf="@id/btnIconSetTaskTimes"
            tools:text="10:00" />


        <ImageButton

            android:id="@+id/btnOpenSettings"
            style="@style/ActionButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"

            android:background="?attr/selectableItemBackgroundBorderless"

            android:contentDescription="@string/content_description_setup_app"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/btnIconSetTaskTimes"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/txtBreakTimeDisplay"
            app:layout_constraintTop_toTopOf="@id/btnIconSetTaskTimes"
            app:srcCompat="@drawable/ic_settings_black_24dp" />


        <ImageButton
            android:id="@+id/btnClearTask"
            style="@style/ActionButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"

            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_description_clear_task"
            android:padding="8dp"
            android:tint="@color/text_color_primary"
            app:layout_constraintBottom_toBottomOf="@+id/cardTask"
            app:layout_constraintStart_toEndOf="@+id/cardTask"
            app:layout_constraintTop_toTopOf="@+id/cardTask"
            app:srcCompat="@drawable/ic_clear_24dp" />


        <com.google.android.material.card.MaterialCardView

            android:id="@+id/cardTask"
            style="@style/TimerCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnIconSetTaskTimes">

            <TextView
                android:id="@+id/txtTask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:maxWidth="200dp"
                android:maxHeight="100dp"
                android:minWidth="180dp"
                android:minHeight="64dp"

                android:scrollbars="vertical"
                android:text="@string/message_hint_choose_task"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


        </com.google.android.material.card.MaterialCardView>


        <LinearLayout


            android:id="@+id/linear_layout_buttons_base"
            style="@style/LinearLayoutSizeBar"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:animateLayoutChanges="true"


            android:background="@drawable/size_panel_bkg"
            android:contentDescription="@string/content_description_size_bar"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            >

            <dev.alessi.chunk.pomodoro.timer.android.ClockView

                android:id="@+id/btnSizePP"
                style="@style/ButtonClockView.PP"

                android:clickable="true"
                android:contentDescription="@string/content_description_size0"
                android:focusable="true"
                android:tag="@string/tag_size_index_0">

            </dev.alessi.chunk.pomodoro.timer.android.ClockView>


            <dev.alessi.chunk.pomodoro.timer.android.ClockView
                android:id="@+id/btnSizeP"
                style="@style/ButtonClockView.P"
                android:clickable="true"
                android:contentDescription="@string/content_description_size1"
                android:focusable="true"
                android:tag="@string/tag_size_index_1" />

            <dev.alessi.chunk.pomodoro.timer.android.ClockView
                android:id="@+id/btnSizeM"
                style="@style/ButtonClockView.M"

                android:contentDescription="@string/content_description_size2"
                android:tag="@string/tag_size_index_2"


                app:checked="true" />

            <dev.alessi.chunk.pomodoro.timer.android.ClockView
                android:id="@+id/btnSizeG"
                style="@style/ButtonClockView.G"


                android:contentDescription="@string/content_description_size3"
                android:tag="@string/tag_size_index_3" />

            <dev.alessi.chunk.pomodoro.timer.android.ClockView
                android:id="@+id/btnSizeGG"
                style="@style/ButtonClockView.GG"

                android:contentDescription="@string/content_description_size4"
                android:tag="@string/tag_size_index_4" />


        </LinearLayout>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/layoutTimerSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="btnIconSetBreak,txtTimerDisplay,btnIconSetTaskTimes,txtBreakTimeDisplay,btnOpenSettings" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>