        <ImageButton
            android:id="@+id/btnLoadSettings"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"


            android:padding="8dp"
            android:tint="@color/text_color_primary"
            app:layout_constraintBottom_toBottomOf="@+id/layoutTimerSettings"
            app:layout_constraintEnd_toEndOf="@+id/btnLoadTask"
            app:layout_constraintStart_toStartOf="@+id/btnLoadTask"
            app:layout_constraintTop_toTopOf="@+id/layoutTimerSettings"
            app:srcCompat="@drawable/ic_settings_black_24dp" />

        <FrameLayout
            android:id="@+id/frm"
            style="@style/FrameLayoutBrackground"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"

            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:focusable="true"

            android:focusableInTouchMode="true"


            android:foregroundGravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutTimerSettings">

            <EditText
                android:id="@+id/edtTask"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/label_task"
                android:lines="3"
                android:maxWidth="200dp"
                android:maxHeight="100dp"
                android:minWidth="180dp"
                android:minHeight="64dp"
                android:selectAllOnFocus="true"

                android:textColor="@color/text_color_primary"

                android:visibility="visible" />

