<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:alpha="200"

    android:background="@drawable/background_border_1dp"
    android:minHeight="56dp">

    <com.google.android.material.chip.Chip
        android:id="@+id/chipSummary"

        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"

        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textStyle="bold"
        app:chipIcon="@drawable/ic_swap_horiz_black_24dp"
        app:layout_constraintStart_toStartOf="@+id/txtTaskCreatedAt"
        app:layout_constraintTop_toBottomOf="@+id/txtTaskCreatedAt"
        tools:text="Semana: 24.5hs" />



    <TextView
        android:id="@+id/txtTaskDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Implementar testes unitarios e validar execução de testes funcionais" />

    <TextView
        android:id="@+id/txtTaskCreatedAt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.9"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintStart_toStartOf="@+id/txtTaskDesc"
        app:layout_constraintTop_toBottomOf="@+id/txtTaskDesc"
        tools:text="Criada às 12:25h de 01/06/2019" />

    <ImageButton
        android:id="@+id/btnInfo"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.7"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:tint="@color/color_action_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:srcCompat="@drawable/ic_info_black_24dp" />

    <ImageButton
        android:id="@+id/btnArchive"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:alpha="0.7"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:tint="@color/color_action_icon"
        app:layout_constraintBottom_toBottomOf="@+id/btnInfo"
        app:layout_constraintStart_toEndOf="@+id/btnInfo"
        app:srcCompat="@drawable/ic_archive_black_24dp" />

    <ImageButton
        android:id="@+id/btnEstimate"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:alpha="0.7"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:tint="@color/color_action_icon"
        app:layout_constraintBottom_toBottomOf="@+id/btnArchive"
        app:layout_constraintStart_toEndOf="@+id/btnArchive"
        app:srcCompat="@drawable/ic_assignment_black_24dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"

        android:background="@drawable/drawable_divider_horizontal"
        app:layout_constraintEnd_toEndOf="@+id/txtTaskDesc"
        app:layout_constraintStart_toStartOf="@+id/chipSummary"
        app:layout_constraintTop_toBottomOf="@id/chipSummary" />

</androidx.constraintlayout.widget.ConstraintLayout>
