<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <item>

        <shape android:shape="rectangle">

            <solid
                android:color="?colorPrimary"
                />

            <corners
                android:topLeftRadius="@dimen/corner_size_medium"
                android:topRightRadius="@dimen/corner_size_medium"
                >


            </corners>


        </shape>

    </item>



    <item android:top="0.5dp" android:left="0.5dp" android:right="0.5dp">

        <shape
            android:shape="rectangle" >

            <solid
                android:color="?colorBackground"
                />

            <corners
                android:topLeftRadius="@dimen/corner_size_medium"
                android:topRightRadius="@dimen/corner_size_medium"
                >

            </corners>


        </shape>

    </item>





</layer-list>
