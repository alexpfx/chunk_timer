<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape

            android:shape="oval"
            android:useLevel="false">
            <gradient
                android:endColor="#fff170"
                android:startColor="#fff179" />


        </shape>
    </item>


    <item>
        <shape
            android:innerRadius="24dp"

            android:shape="ring"
            android:thickness="8dp"

            android:useLevel="false">
            <gradient
                android:centerColor="#ffdf66"
                android:endColor="#fff179"
                android:gradientRadius="80dp"
                android:startColor="#f49140"
                android:type="radial" />


        </shape>
    </item>



    <item

        android:gravity="center">

        <rotate
            android:fromDegrees="-90"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="-90"
            android:drawable="@drawable/clock_minutes"
            >


        </rotate>

    </item>



    <item

        android:gravity="center">

        <shape android:shape="oval">
            <solid android:color="#f0803d" />

            <size
                android:width="8dp"
                android:height="8dp" />
        </shape>


    </item>


</layer-list>